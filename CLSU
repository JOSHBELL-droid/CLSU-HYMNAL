    <script>
        // Sample hymns data (full 146 can be added here - truncated for demo)
        const hymns = [
            {
                num: 1,
                title: "Yes‚Äôaryategyek‚Äô ensi yoona",
                eng: "Jesus shall reign where ever the Sun",
                ref: "LSB832:L.168: AMR 11: GB72",
                lyrics: `1. Yes‚Äôaryategyek‚Äô ensi yoona\n2. Imwe Bantu mwe ab‚ÄôOmunsi\n... (full verses available in book)`
            },
            {
                num: 3,
                title: "Iwe Orikwera Mukama Ruhanga",
                eng: "Holy, holy, holy",
                ref: "C.H.73 LSB 507",
                lyrics: `1. Iwe Orikwera Mukama Ruhanga\nDoh is E\nHoly, holy, holy! Lord God Almighty!\nEarly in the morning our song shall rise to Thee...`
            },
            {
                num: 7,
                title: "Kumba Nindeeb‚ÄôOmusharaba",
                eng: "When I survey the wondrous cross",
                ref: "LSB425-426",
                lyrics: `1. Kumba Nindeeb‚ÄôOmusharaba\nWhen I survey the wondrous cross\nOn which the Prince of glory died...`
            },
            {
                num: 35,
                title: "Tusiime Ruhanga hati tushemereirwe",
                eng: "Now thank we all our God",
                ref: "LSB 895",
                lyrics: `1. Tusiime Ruhanga hati tushemereirwe\nNow thank we all our God\nWith heart and hands and voices...`
            },
            {
                num: 108,
                title: "Yesu naaza kugaruka",
                eng: "Joy to the World",
                ref: "LSB387",
                lyrics: `1. Yesu naaza kugaruka ens‚Äôeshemererwe\nJoy to the world, the Lord is come...`
            }
            // Add the remaining 141 hymns here in the same format
        ];

        // Render hymn list
        function renderHymns(filteredHymns = hymns) {
            const container = document.getElementById('hymnList');
            container.innerHTML = '';
            
            filteredHymns.forEach(h => {
                const card = document.createElement('div');
                card.className = 'hymn-card';
                card.innerHTML = `
                    <span class="hymn-number">${h.num}</span>
                    <div class="hymn-title">${h.title}</div>
                    <small style="color:#666;">${h.eng} ‚Ä¢ ${h.ref}</small>
                `;
                card.onclick = () => showHymnModal(h);
                container.appendChild(card);
            });
        }

        function showHymnModal(hymn) {
            document.getElementById('modalTitle').textContent = `${hymn.num}. ${hymn.title} (${hymn.eng})`;
            document.getElementById('modalLyrics').innerHTML = `
                <p><strong>Reference:</strong> ${hymn.ref}</p>
                <p style="margin-top:1.5rem; font-size:1.15rem;">${hymn.lyrics}</p>
                <p style="margin-top:2rem; color:#888; font-style:italic;">Full verses & Runyankole tune available in the printed CLSU Lutheran Worship Book.</p>
            `;
            document.getElementById('hymnModal').style.display = 'flex';
        }

        function closeModal() {
            document.getElementById('hymnModal').style.display = 'none';
        }

        // Section switching
        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(sec => sec.classList.remove('active'));
            document.getElementById(sectionId).classList.add('active');
            
            // Update active menu
            document.querySelectorAll('.menu-item').forEach(item => item.classList.remove('active'));
            const activeMenu = Array.from(document.querySelectorAll('.menu-item')).find(item => 
                item.getAttribute('onclick').includes(`'${sectionId}'`)
            );
            if (activeMenu) activeMenu.classList.add('active');
        }

        // Search function
        function searchHymns() {
            const term = document.getElementById('searchInput').value.toLowerCase().trim();
            if (!term) {
                renderHymns();
                return;
            }
            const filtered = hymns.filter(h => 
                h.title.toLowerCase().includes(term) || 
                h.eng.toLowerCase().includes(term) ||
                h.ref.toLowerCase().includes(term)
            );
            renderHymns(filtered);
        }

        // Initialize
        window.onload = function() {
            renderHymns();
            
            // Make modal closable by clicking outside
            const modal = document.getElementById('hymnModal');
            modal.addEventListener('click', function(e) {
                if (e.target === modal) closeModal();
            });
            
            // Keyboard escape
            document.addEventListener('keydown', function(e) {
                if (e.key === "Escape") closeModal();
            });
            
            console.log('%c‚úÖ CLSU Lutheran Worship Digital App ready in VS Code!', 'color:#8B0000; font-size:1.1rem;');
        };
    </script>
